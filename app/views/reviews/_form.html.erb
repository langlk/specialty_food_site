<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
    <%= f.label :author, class: "control-label" %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Rating (out of 5)", class: "control-label" %>
    <%= f.number_field :rating, {class: "form-control", min: 1, max: 5} %>
  </div>
  <div class="form-group">
    <%= f.label "Review (50 to 250 characters)", class: "control-label" %>
    <%= f.text_area :content_body, class: "form-control" %>
  </div>
  <%= f.submit class: "btn" %>
<% end %>
