<h1>Products</h1>
<h5><%= link_to "Add a Product", new_product_path %></h5>
<% if @products.any? %>
  <div class="products-list">
    <% @products.each do |product| %>
      <div class="product panel panel-default">
        <div class="panel-body">
          <p><%= link_to product.name, product_path(product) %></p>
          <p>$<%= product.cost %></p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <h3>There are no products saved.</h3>
<% end %>
